@model IEnumerable<MPExtended.Services.MediaAccessService.Interfaces.Music.WebMusicArtistDetailed>
@{
	ViewBag.Title = UIStrings.Music;
}
<div id="submenu">
	<h1>@UIStrings.Music</h1>
</div>

<div id="content">
@{
	if(Model.Count() == 0)
	{
	<p>@UIStrings.SorryYourSearchDidNotYieldAnyResults</p>
	}else
	{
		<text><ul class="longlist">
		@foreach (var artist in Model)
		{
			<li>@Html.ActionLink(artist.Title, "Albums", new { artist = artist.Id })</li>
		}
		</ul></text>
	}
}
</div>