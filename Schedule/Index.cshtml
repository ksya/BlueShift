@model IEnumerable<ScheduleViewModel>
@{
		ViewBag.Title = UIStrings.Schedules;
}

<div id="submenu">
	<h1>@UIStrings.Schedules</h1>
	<ul>
		<li>@Html.ActionLink(UIStrings.TVGuide, "TVGuide", "Television")</li>
		<li>@Html.ActionLink(UIStrings.Recordings, "Recordings", "Television")</li>
		<li>@Html.ActionLink(UIStrings.Schedules, "Index", "Schedule")</li>
		<li>@Html.ActionLink(UIStrings.Status, "Index", "Status")</li>
	</ul>
</div>

<div id="content">
<table class="content">
	<tr>
		<th>@UIStrings.Program</th>
		<th>@UIStrings.ScheduleHeaderRepetition</th>
		<th>@UIStrings.Channel</th>
		<th>@UIStrings.ScheduleHeaderStartTime</th>
		<th>@UIStrings.ScheduleHeaderEndTime</th>
		<th></th>
	</tr>
		
	@foreach (var item in Model) {
	<tr>
		<td>@Html.DisplayFor(x => item.Title)</td>
		<td>@item.ScheduleTypeName</td>
		<td>@Html.DisplayFor(x => item.ChannelName)</td>
		<td>@Html.DisplayFor(x => item.StartTimeFormatted)</td>
		<td>@Html.DisplayFor(x => item.EndTimeFormatted)</td>
		<td>
			@Html.ActionLink(UIStrings.Delete, "DeleteScheduleById", new { id = item.Id })<br />
			@Html.ActionLink(UIStrings.Edit, "EditSchedule", new { id = item.Id }) 
		</td>
	</tr>
	}
</table>

<p>@Html.ActionLink(UIStrings.AddSchedule, "AddSchedule")</p>
</div>