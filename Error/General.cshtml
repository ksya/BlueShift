@model Exception
@{
		ViewBag.Title = UIStrings.Error;
}
<div id="submenu">
	<h1>@UIStrings.SorryAnErrorOccurred</h1>
</div>

<div id="content">
<p>
@UIStrings.ErrorPageText
</p>

<ul>
<li>WebMediaPortal version @ViewBag.FullVersion.</li>
<li>Request: @ViewBag.Request</li>
</ul>
<br />

@{
		var exception = Model;
		while (exception != null)
		{
				<p>@exception.Message</p>
				<p>
						<pre>@exception.StackTrace</pre>
				</p>
				exception = exception.InnerException;
		}
}
</div>